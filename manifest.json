{
	"name": "PriceSpy",
	"description": "PriceSpy",
	"version": "1.0",
	"manifest_version": 2,
	"permissions": [
		"notifications",
		"tabs", 
		"handleResponse",
		"bookmarks", 
		"declarativeWebRequest", 
		"*://*/*"
		],
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"//background.js位于最后一个
			]
		},
	//icon.png的大小为32x32 
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon" : "images/icon19.png",
		"default_title": "PriceSpy"
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": [
				"content.js"
			]
		}
	]
}